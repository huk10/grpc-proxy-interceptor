{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declarationDir": "./types",
    "declaration": true,
    "outDir": "./lib",
    "types": ["jest"]
  },
  "exclude": ["**/*.test.ts", "types"]
}
